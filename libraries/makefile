LIB_SRC_FOLDER=../libraries/src
LIB_OUT_FOLDER=../libraries/out
LIB_OBJ_FOLDER=$(LIB_OUT_FOLDER)/obj
LIB_HEADERS_FOLDER=$(LIB_OUT_FOLDER)/headers

LIB_SRC_DATALIB=dataLib
LIB_C_DATALIB=dataLib.c
LIB_H_DATALIB=dataLib.h
LIB_O_DATALIB=dataLib.o

LIB_SRC_MATHSTATS=mathStats
LIB_C_MATHSTATS=mathStats.c
LIB_H_MATHSTATS=mathStats.h 
LIB_O_MATHSTATS=mathStats.o


MATH_STATS: $(LIB_SRC_FOLDER)/$(LIB_SRC_MATHSTATS)
	mkdir -p $(LIB_OUT_FOLDER)
	mkdir -p $(LIB_OBJ_FOLDER)
	mkdir -p $(LIB_HEADERS_FOLDER)
	gcc -c $(LIB_SRC_FOLDER)/$(LIB_SRC_MATHSTATS)/$(LIB_C_MATHSTATS) -o $(LIB_OBJ_FOLDER)/$(LIB_O_MATHSTATS) -lm
	cp $(LIB_SRC_FOLDER)/$(LIB_SRC_MATHSTATS)/$(LIB_H_MATHSTATS) $(LIB_HEADERS_FOLDER)/$(LIB_H_MATHSTATS)


DATA_LIB: $(LIB_SRC_FOLDER)/$(LIB_SRC_DATALIB)
	mkdir -p $(LIB_OUT_FOLDER)
	mkdir -p $(LIB_OBJ_FOLDER)
	mkdir -p $(LIB_HEADERS_FOLDER)
	gcc -c $(LIB_SRC_FOLDER)/$(LIB_SRC_DATALIB)/$(LIB_C_DATALIB) -o $(LIB_OBJ_FOLDER)/$(LIB_O_DATALIB) -lm
	cp $(LIB_SRC_FOLDER)/$(LIB_SRC_DATALIB)/$(LIB_H_DATALIB) $(LIB_HEADERS_FOLDER)/$(LIB_H_DATALIB)

MAKE_LIBS: MATH_STATS DATA_LIB

CLEAR_LIBS: 
	rm -rf $(LIB_OUT_FOLDER)